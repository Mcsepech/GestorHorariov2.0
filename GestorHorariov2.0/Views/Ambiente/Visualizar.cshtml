@model GestorHorariov2._0.Models.Ambiente
@{
    ViewBag.Title = "Visualizar";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Ciclo/Index">Ciclo</a>
        </li>
        <li class="breadcrumb-item active">@Model.ambiente_nombre</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        Información detallada de los Ambientes
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.ambiente_id</dd>
            <dt>Codigo</dt>
            <dd>@Model.ambiente_codigo</dd>
            <dt>Nombre</dt>
            <dd>@Model.ambiente_nombre</dd>
            <dt>Estado</dt>
            <dd>@(Model.ambiente_estado == "A" ? "Activo" : "Inactivo")</dd>
        </dl>
    </div>
</div>

